{
  "name": "markdown-components",
  "version": "2.0.1",
  "description": "Add user-safe, React-like components to your favorite markdown engine",
  "main": "lib/markdown-components.js",
  "browser": "lib/markdown-components.min.js",
  "repository": "https://github.com/aneilbaboo/markdown-components",
  "author": "Aneil Mallavarapu",
  "license": "MIT",
  "scripts": {
    "prepare": "yarn run build",
    "build": "rm -frd lib && tsc",
    "lint": "tslint src/**/*.ts",
    "test": "jest",
    "test-with-coverage": "jest --collectCoverage",
    "watch": "jest --watch"
  },
  "dependencies": {
    "js-htmlencode": "^0.3.0",
    "lodash": "^4.17.10",
    "memory-streams": "^0.1.2"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "@types/lodash": "^4.14.109",
    "jest": "^22.4.0",
    "jest-html-reporter": "^2.0.0",
    "markdown": "^0.5.0",
    "markdown-it": "^8.4.0",
    "markdown-js": "^0.0.3",
    "showdown": "^1.8.6",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.(test|spec)\\.(ts?)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "text",
      "lcov",
      "json"
    ]
  }
}
